[
    {
      "job": "InfantSNSummary",
      "active": true,
      "schedule": "every(60).minutes",
      "transients": {
        "select": {
            "modified" : {
                "after" : {
                    "use": "$timeLastRun",
                    "event": "InfantSNSummary"
                }
            },
            "channels": {"anyOf": ["WEIZMANN_INFANTSN","WEIZMANN_INFANTSN_SINGLE"] },
            "withFlags": "INST_ZTF",
            "withoutFlags": "HAS_ERROR"
        },
        "state": "$latest",
        "content": {
          "docs": [
            "TRANSIENT",
            "COMPOUND",
            "T2RECORD",
            "PHOTOPOINT",
            "UPPERLIMIT"
          ],
          "t2SubSelection": [
             "MARSHALMONITOR",
             "CATALOGMATCH"
          ]
        },
        "chunk": 200
      },
      "tasks": [
        {
          "task": "InfantToSlack",
          "unitId": "SlackSummaryPublisher",
          "runConfig":  {
            "excitement": {"Low": 1, "Mid": 3, "High": 10},
            "slackToken": "xoxb-342249709399-426410239062-D05KV0EqWByin5fRzuATq36X",
            "slackChannel": "#infantsn_ampel",
            "fullPhotometry": true,
            "quiet": true
          }
        }
      ]
    },
